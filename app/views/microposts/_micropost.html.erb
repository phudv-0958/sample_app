<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost.gravatar.size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t(".post") %> <%= time_ago_in_words(micropost.created_at) %> <%= t(".ago") %>.
    <%= link_to t(".button_submit"), micropost, method: :delete, data: {confirm: t(".confirm")} %>
  </span>
</li>
