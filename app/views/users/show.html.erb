<% if(@user.nil?) %>
<% provide :title, t(".error") %>
<div class="center jumbotron">
  <h1><%= t(".error") %> </h1>
  <p><%= link_to t(".home"), root_path %></p>
</div>
<% else %>
<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<% end %>
